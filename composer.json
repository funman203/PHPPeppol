{
    "name": "votre-namespace/peppol-invoice",
    "description": "Bibliothèque PHP pour créer et valider des factures électroniques conformes UBL.BE, EN 16931 et Peppol BIS",
    "type": "library",
    "keywords": [
        "peppol",
        "ubl",
        "ublbe",
        "e-invoicing",
        "electronic invoice",
        "en16931",
        "belgium",
        "schematron"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Votre Nom",
            "email": "votre.email@example.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-dom": "*",
        "ext-xml": "*",
        "ext-xsl": "*",
        "ext-libxml": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Peppol\\": "src/"
        },
        "files": [
            "src/PeppolInvoice.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Peppol\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/validate-invoice"
    ],
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src --level=8",
        "install-schematron": "php -r \"require 'vendor/autoload.php'; (new Peppol\\Validation\\SchematronValidator())->installSchematronFiles();\"",
        "clear-cache": "php -r \"require 'vendor/autoload.php'; (new Peppol\\Validation\\SchematronValidator())->clearCache();\""
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
